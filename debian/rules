#!/usr/bin/make -f

package=wmrack

SHELL=/bin/sh

export DH_VERBOSE = 1

build: Makefile
	dh_testdir
	make
	touch build

Makefile: 
	xmkmf

clean:
	dh_testdir
	dh_testroot
	-make clean
	-rm -f build Makefile
	dh_clean

binary-indep: build
#	dh_testdir -i
#	dh_testroot
#	dh_clean -i -k

binary-arch: build
	dh_testdir -a
	dh_testroot
	dh_clean -a -k
	dh_installdirs -a
	cp wmrack debian/tmp/usr/X11R6/bin
	dh_installdocs -a
	dh_installmenu -a
	cp wmrack.man debian/tmp/usr/X11R6/man/man1/wmrack.1x
	dh_installchangelogs -a
	dh_strip -a
	dh_compress -a
	dh_fixperms -a
	dh_installdeb -a
	dh_shlibdeps -a
	dh_gencontrol -a -u-isp #-DSection=x11 -u-DPriority=extra
	dh_makeshlibs -a
	dh_du -a
	dh_md5sums -a
	dh_builddeb -a

binary:	binary-indep binary-arch

.PHONY: binary binary-arch binary-indep clean

# Local variables:
# mode: makefile
# mode: font-lock
# End:
